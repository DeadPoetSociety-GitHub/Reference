<!-- 일정시간 입력없으면 페이지 이동 -->
<script>
  let time = new Date().getTime();
  $(document.body).bind("mousemove keypress", function(e) {
    time = new Date().getTime();
  });
  
  function refresh() {
    if(new Date().getTime() - time >= 60000) {
      location.replace('http://neutinamu.org/page/s9/s2.php');
    } else {
    setTimeout(refresh, 5000);
    }
  }
  setTimeout(refresh, 5000);
</script>

